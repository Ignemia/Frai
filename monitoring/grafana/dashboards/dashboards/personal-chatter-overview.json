{
  "dashboard": {
    "id": null,
    "title": "Personal Chatter - Application Overview",
    "tags": ["personal-chatter", "ai", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "hideControls": false,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Application Health",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job=\"personal-chatter\"}",
            "legendFormat": "Application Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"personal-chatter\"}[5m])",
            "legendFormat": "{{method}} {{handler}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"personal-chatter\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"personal-chatter\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"personal-chatter\", status=~\"4..|5..\"}[5m]) / rate(http_requests_total{job=\"personal-chatter\"}[5m]) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Error %",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"personal-chatter\"} / 1024 / 1024",
            "legendFormat": "RSS Memory (MB)",
            "refId": "A"
          },
          {
            "expr": "process_virtual_memory_bytes{job=\"personal-chatter\"} / 1024 / 1024",
            "legendFormat": "Virtual Memory (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "GPU Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "gpu_memory_used_bytes{job=\"personal-chatter\"} / gpu_memory_total_bytes{job=\"personal-chatter\"} * 100",
            "legendFormat": "GPU Memory Usage %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "GPU Memory %",
            "min": 0,
            "max": 100
          }
        ]
      },
      {
        "id": 7,
        "title": "Image Generation Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(image_generation_requests_total{job=\"personal-chatter\"}[5m])",
            "legendFormat": "Generation Rate",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(image_generation_duration_seconds_bucket{job=\"personal-chatter\"}[5m]))",
            "legendFormat": "Generation Time (95th percentile)",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "title": "Chat Activity",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "rate(chat_messages_total{job=\"personal-chatter\"}[5m])",
            "legendFormat": "Messages/sec",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(chat_response_duration_seconds_bucket{job=\"personal-chatter\"}[5m]))",
            "legendFormat": "Response Time (95th percentile)",
            "refId": "B"
          }
        ]
      }
    ]
  }
}
