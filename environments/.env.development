# Development Environment Configuration
# Used for local development and testing

# Application settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug
TESTING=false

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Database settings (development)
DATABASE_URL=sqlite:///dev_personal_chatter.db
REDIS_URL=redis://localhost:6379/0

# AI Model settings
MODEL_PATH=./models/gemma-3-4b-it
IMAGE_MODEL_PATH=./models/FLUX.1-dev
EMBEDDING_MODEL_PATH=./models/Gemma-Embeddings-v1.0

# Memory and performance
MAX_MEMORY_GB=8
GPU_MEMORY_FRACTION=0.8
ENABLE_MODEL_CACHING=true
OFFLOAD_TO_CPU=false

# Development features
ENABLE_HOT_RELOAD=true
ENABLE_PROFILING=true
ENABLE_DEBUG_ENDPOINTS=true
MOCK_EXTERNAL_APIS=true

# Search API keys (development)
BRAVE_SEARCH_API_KEY=dev_api_key_here

# Security (development - less strict)
SECRET_KEY=dev_secret_key_change_in_production
JWT_SECRET=dev_jwt_secret
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:3000"]
ALLOW_CREDENTIALS=true

# Monitoring and logging
ENABLE_METRICS=true
METRICS_PORT=8001
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=development

# File paths
UPLOAD_PATH=./outputs
MODEL_CACHE_PATH=./models
USER_DATA_PATH=./data
LOG_PATH=./logs

# Feature flags
COMMAND_PREPROCESSING_ENABLED=true
IMAGE_GENERATION_ENABLED=true
ONLINE_SEARCH_ENABLED=true
LOCAL_SEARCH_ENABLED=true
MEMORY_STORAGE_ENABLED=true

# Development tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_OPENAPI_JSON=true

# Testing settings
TEST_DATABASE_URL=sqlite:///test_personal_chatter.db
PYTEST_CURRENT_TEST=false
CI=false
