# Production Environment Configuration
# Used for production deployment

# Application settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
TESTING=false

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4

# Database settings (production)
# These should be set as GitHub Secrets
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}

# AI Model settings
MODEL_PATH=./models/gemma-3-4b-it
IMAGE_MODEL_PATH=./models/FLUX.1-dev
EMBEDDING_MODEL_PATH=./models/Gemma-Embeddings-v1.0

# Memory and performance
MAX_MEMORY_GB=16
GPU_MEMORY_FRACTION=0.9
ENABLE_MODEL_CACHING=true
OFFLOAD_TO_CPU=false

# Production features
ENABLE_HOT_RELOAD=false
ENABLE_PROFILING=false
ENABLE_DEBUG_ENDPOINTS=false
MOCK_EXTERNAL_APIS=false

# Search API keys (production)
BRAVE_SEARCH_API_KEY=${BRAVE_SEARCH_API_KEY}

# Security (production - strict)
SECRET_KEY=${SECRET_KEY}
JWT_SECRET=${JWT_SECRET}
CORS_ORIGINS=["https://yourdomain.com"]
ALLOW_CREDENTIALS=true

# Monitoring and logging
ENABLE_METRICS=true
METRICS_PORT=8001
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=production

# File paths
UPLOAD_PATH=./outputs
MODEL_CACHE_PATH=./models
USER_DATA_PATH=./data
LOG_PATH=./logs

# Feature flags
COMMAND_PREPROCESSING_ENABLED=true
IMAGE_GENERATION_ENABLED=true
ONLINE_SEARCH_ENABLED=true
LOCAL_SEARCH_ENABLED=true
MEMORY_STORAGE_ENABLED=true

# Production settings
ENABLE_SWAGGER_UI=false
ENABLE_REDOC=false
ENABLE_OPENAPI_JSON=false

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
